{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": [
      "es5",
      "es2015.symbol.wellknown"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ]
}
